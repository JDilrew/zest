{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Debug Zest Node",
            "runtimeExecutable": "yarn",
            "runtimeArgs": [
                "test:node"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "autoAttachChildProcesses": true,
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Debug Zest Node (spying.test.js)",
            "runtimeExecutable": "yarn",
            "runtimeArgs": [
                "test:node",
                "test",
                "./src/spying.test.js"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "autoAttachChildProcesses": true,
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Debug Zest JSDOM",
            "runtimeExecutable": "yarn",
            "runtimeArgs": [
                "test:jsdom",
                "${workspaceFolder}/zest/bin/cli.js"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "autoAttachChildProcesses": true,
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}